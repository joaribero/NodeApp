<div class="container-custom p-4">
    <div class="row">
        {{#each links}}
        {{!-- <div class="col-md-3"> --}}
            <div class="card-custom text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2 text-dark">{{description}}</p>
                    <p class="text-secondary"><em>{{timeago created_at}}</em></p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger mb-auto">Delete Link</a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary mb-auto">Edit</a>
                </div>
            </div>
            {{!--
        </div> --}}
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not links saved yet.</p>
                <a href="/links/add">Â¡Create one!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>